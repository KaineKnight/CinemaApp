<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background"
    android:backgroundTint="@color/black_background"
    tools:context=".ui.fav.FavFragment">



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="424dp"
        android:layout_height="72dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-20dp"
            android:layout_weight="1"
            android:src="@drawable/arrow_back" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="102dp"
            android:layout_height="39dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/logo_button" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-15dp"
            android:layout_weight="1"
            android:src="@drawable/vector_search" />
    </LinearLayout>

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="656dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Ваши любимые фильмы"
                android:textColor="@color/red"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Сортировать по:"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Алфавит"
                    android:textColor="@color/yellow"
                    android:textSize="18sp" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView25"
                            android:layout_width="153dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="0dp"
                            android:src="@drawable/rectangle_1" />

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="153dp"
                            android:layout_height="208dp"
                            android:layout_marginStart="-30dp"
                            android:layout_weight="1"
                            android:src="@drawable/rectangle_1" />

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="153dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="-30dp"
                            android:layout_weight="1"
                            android:src="@drawable/rectangle_1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="153dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/rectangle_1" />

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="153dp"
                            android:layout_height="208dp"
                            android:layout_marginStart="-30dp"
                            android:layout_weight="1"
                            android:src="@drawable/rectangle_1" />

                        <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="153dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="-30dp"
                            android:layout_weight="1"
                            android:src="@drawable/rectangle_1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="153dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/rectangle_1" />

                        <ImageView
                            android:id="@+id/imageView18"
                            android:layout_width="153dp"
                            android:layout_height="208dp"
                            android:layout_marginStart="-30dp"
                            android:layout_weight="1"
                            android:src="@drawable/rectangle_1" />

                        <ImageView
                            android:id="@+id/imageView19"
                            android:layout_width="153dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="-30dp"
                            android:layout_weight="1"
                            android:src="@drawable/rectangle_1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView20"
                            android:layout_width="153dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/rectangle_1" />

                        <ImageView
                            android:id="@+id/imageView21"
                            android:layout_width="153dp"
                            android:layout_height="208dp"
                            android:layout_marginStart="-30dp"
                            android:layout_weight="1"
                            android:src="@drawable/rectangle_1" />

                        <ImageView
                            android:id="@+id/imageView22"
                            android:layout_width="153dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="-30dp"
                            android:layout_weight="1"
                            android:src="@drawable/rectangle_1" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>